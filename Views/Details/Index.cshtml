@model IEnumerable<WebProgOdev.Models.Text>



<p>
    <a asp-action="Create">Yeni Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.yaziBaslik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.yaziTarih)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.yaziIcerik)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.yaziBaslik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.yaziTarih)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.yaziIcerik)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.yaziID">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.yaziID">Detay</a> |
                <a asp-action="Delete" asp-route-id="@item.yaziID">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
