
@model WebProgOdev.Models.HomePageViewModels


<div class="container" style="margin-top:30px">
    <div class="row">
        <div class="col-sm-2">
            <h2>Kategoriler</h2>
            <table class="table">

                <tbody>
                    @foreach (var item in Model.Kategori)
                    {
                    <tr>
                        <td>
                            @item.kategoriAdi
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-sm-10">
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        @foreach (var item in Model.Yazi)
                        {
                            <tr>
                                <td>
                                    <h4 class="card-title"><a asp-controller="Home" asp-action="YaziDetails" asp-route-id="@item.yaziID">@item.yaziBaslik</a></h4>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p class="card-text">
                                        @item.yaziIcerik
                                    </p>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
